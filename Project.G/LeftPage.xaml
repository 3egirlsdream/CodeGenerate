<Page x:Class="Project.G.LeftPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.G"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="300"
      Title="LeftPage">
    <Page.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="30" Opacity="0.2"/>
    </Page.Effect>
    <Border Background="#E6E6E6" Opacity="0.9">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="15,5,15,0">
                <TextBlock Margin="0,0,0,5"  Text="选择数据库" FontWeight="Bold"/>
            </StackPanel>
            <WrapPanel Grid.Row="1" x:Name="addCheckbox" Background="#E6E6E6" Width="300"/>
            <WrapPanel Grid.Row="2" x:Name="CheckboxColume" Width="300"/>
            <WrapPanel Grid.Row="3" x:Name="C3" Width="300"/>
            <Button Background="#B8B8B8" Grid.Row="4" Content="保存" Click="Save" Margin="100,0,100,10" BorderThickness="0"/>
        </Grid>
    </Border>
</Page>
