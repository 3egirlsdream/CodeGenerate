<Page x:Class="Project.G.RightPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Project.G"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="300"
      Title="RightPage">
    <Page.Effect>
        <DropShadowEffect ShadowDepth="1" BlurRadius="30" Opacity="0.2"/>
    </Page.Effect>
    <Border Background="#E6E6E6" Opacity="0.9">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="15,5,15,0">
                <TextBlock Margin="0,0,0,5"  Text="数据库连接字符串" FontWeight="Bold"/>
                <TextBox Height="50" Text="{Binding SqlString}" Background="#E6E6E6"/>
            </StackPanel>
            <Button Background="#B8B8B8" Grid.Row="2" Width="100" Content="保存" Click="Save" Margin="0,0,0,10" BorderThickness="0"/>
        </Grid>
    </Border>
</Page>
