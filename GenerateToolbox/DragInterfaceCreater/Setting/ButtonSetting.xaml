<Page x:Class="GenerateToolbox.ButtonSetting"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GenerateToolbox"
      mc:Ignorable="d"  d:DesignWidth="200"
      Title="ButtonSetting">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="按钮名称  " VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBox x:Name="name_zh" Text="" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <TextBlock Text="按钮字段  " VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <TextBox x:Name="name_eg"  Text="" Width="100"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                <Button Content="保存" Width="100" Click="Button_Click" Style="{DynamicResource SquareButtonStyle}"/>
            </StackPanel>
            
        </StackPanel>
    </Grid>
</Page>
