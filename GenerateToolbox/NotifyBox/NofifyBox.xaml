<Window x:Class="GenerateToolbox.NotifyBox.NofifyBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerateToolbox.NotifyBox"
        mc:Ignorable="d"
        Title="NofifyBox"
        WindowStyle="None"
        BorderThickness="0"
        FontFamily="微软等线 Light"
        AllowsTransparency="True"
        Height="136" Width="250">
    <Grid>
        <Button
                        Style="{StaticResource CloseBorderStyle}"
                        x:Name="CLOSE"
                        Width="13"
                        Height="13"
                        Margin="0,10,15,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="#FFB8B8B8"
                        Click="CloseWindow"
                        ToolTip="关闭" />

        <TextBlock x:Name="tb" Text="别提莫坐着了" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" TextWrapping="Wrap"/>
    </Grid>
</Window>
