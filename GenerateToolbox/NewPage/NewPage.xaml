<Page
    x:Class="GenerateToolbox.NewPage.NewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GenerateToolbox.NewPage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="NewPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Border Background="White" CornerRadius="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="6*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBox
                AcceptsReturn="True"
                BorderThickness="0"
                FontFamily="Consolas"
                FontSize="14"
                Text="{Binding config, Mode=TwoWay}"
                TextWrapping="Wrap" />
            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Ⅰ" Width="10" Margin="90,3,0,0" Foreground="Gray"/>
                    <Border Width="600">
                        <Border
                        Width="{Binding BorderWidth, Mode=TwoWay}"
                        Margin="0,10"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        BorderBrush="Black"
                        BorderThickness="1" />
                    </Border>
                    
                    <TextBlock Text="{Binding EndOfMonth, Mode=TwoWay}" Width="100" Margin="0,3,0,0" Foreground="Gray"/>
                </StackPanel>
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="100"
                        Height="30"
                        Background="#4F4150"
                        BorderThickness="0"
                        Command="{Binding CmdGenerate}"
                        Content="生  成"
                        FontSize="13"
                        Foreground="White" />
                    <Button
                        Width="100"
                        Height="30"
                        Margin="25,0,0,0"
                        Background="#4F4150"
                        BorderThickness="0"
                        Command="{Binding CmdReset}"
                        Content="重  置"
                        FontSize="13"
                        Foreground="White" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Page>
